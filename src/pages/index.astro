---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import { containsServerDirective } from 'astro/runtime/server/render/server-islands.js';

const concerts = await getCollection('concerts');
---

<Layout>
  <h1 class="text-3xl font-bold text-center text-gray-800 mb-3">Concerts</h1>
  <div>
    <table
      class="table-auto border border-gray-200 rounded-lg shadow-sm bg-white">
      <thead>
        <tr class="bg-gray-50">
          <th class="py-2 px-4 font-bold text-gray-700 border-b text-center"
            >#</th
          >
          <th class="py-2 px-4 text-left font-bold text-gray-700 border-b"
            >Date</th
          >
          <th class="py-2 px-4 text-left font-bold text-gray-700 border-b"
            >Venue</th
          >
          <th class="py-2 px-4 text-left font-bold text-gray-700 border-b"
            >Setlist</th
          >
        </tr>
      </thead>
      <tbody>
        {
          concerts.map((concert, idx) => (
            <>
              <tr class="hover:bg-gray-50 transition">
                <td class="py-2 px-2 border-b font-mono text-3xl text-gray-50 bg-gray-400 text-center">
                  {idx + 1}
                </td>
                <td class="py-2 px-4 border-b text-gray-700">
                  {new Date(concert.data.date).toLocaleDateString('en-GB')}
                </td>
                <td class="py-2 px-4 border-b text-gray-700">
                  <span>{concert.data.venue.name.replace("'", '’')}</span>
                  <br />
                  <span class="text-gray-400 text-sm italic ">
                    {concert.data.venue.city}, {concert.data.venue.country}
                  </span>
                </td>
                <td class="py-2 px-4 border-b">
                  <button
                    type="button"
                    onclick={`document.getElementById('setlist-row-${idx}').classList.toggle('hidden')`}
                    class="px-3 py-1 rounded bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-medium transition"
                    aria-controls={`setlist-row-${idx}`}
                    aria-expanded="false">
                    View
                  </button>
                </td>
              </tr>
              <tr id={`setlist-row-${idx}`} class="hidden">
                <td colspan="4" class="p-0 bg-gray-50">
                  <ul class="w-full px-8 py-4 text-gray-600 text-base">
                    {concert.data.songs &&
                      concert.data.songs.map((song, index) => (
                        <li class="mb-1">
                          <span class="font-mono text-gray-400">
                            {index + 1}.
                          </span>{' '}
                          {song.title.replace("'", '’')}
                        </li>
                      ))}
                  </ul>
                </td>
              </tr>
            </>
          ))
        }
      </tbody>
    </table>
  </div>
</Layout>

<style>
  .hidden {
    display: none;
  }
</style>
